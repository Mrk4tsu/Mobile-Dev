<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:paddingTop="60sp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/app_name"
                android:textSize="25sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="100px"
                android:layout_marginTop="50px"
                android:gravity="center|left"
                android:text="Your Heigh In CM"
                android:textColor="@color/black"
                android:textSize="17sp" />

            <EditText
                android:id="@+id/editTextHeight"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="100px"
                android:layout_marginTop="10px"
                android:layout_marginEnd="100px"
                android:paddingStart="20dp"
                android:textSize="@dimen/edit_text"
                android:text="45"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="100px"
                android:layout_marginTop="50px"
                android:gravity="center|left"
                android:text="Your weigh in KG"
                android:textColor="@color/black"
                android:textSize="17sp" />

            <EditText
                android:id="@+id/editTextWeight"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="100px"
                android:layout_marginTop="10px"
                android:layout_marginEnd="100px"
                android:paddingStart="20dp"
                android:text="45"
                android:textSize="@dimen/edit_text" />

            <Button
                android:id="@+id/buttonCalculate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="100px"
                android:background="@color/blue"
                android:text="CACULATE"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="YOUR RESULT"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/textViewResult"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:text="23.5"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/textViewResultString"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="NORMAL"
                android:textSize="24sp" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
